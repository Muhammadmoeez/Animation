<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >


    <ImageView
        android:id="@+id/t_l_imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/t_r_imageView1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toEndOf="@+id/t_l_imageView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sms"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/b_l_imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/t_l_imageView"
        app:srcCompat="@drawable/sms"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/b_r_imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toEndOf="@+id/b_l_imageView"
        app:layout_constraintTop_toBottomOf="@+id/t_r_imageView1"
        app:srcCompat="@drawable/profile"/>



</android.support.constraint.ConstraintLayout>